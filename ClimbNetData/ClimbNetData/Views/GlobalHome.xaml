<Window x:Class="ClimbNetData.Views.GlobalHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClimbNetData.Views"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:publicShare="clr-namespace:HR.Share.PublicShare;assembly=HR.Share.PublicShare"
        mc:Ignorable="d"
        Title="{Binding Title}"
        MinHeight="600"
        MinWidth="900" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="White"
        TextElement.FontWeight="Medium" SnapsToDevicePixels="True"
        TextElement.FontSize="14" 
        Icon="..\CuttleFish.ico"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto">
    <ContentControl prism:RegionManager.RegionName="{x:Static publicShare:RegionNames.GlobalRegion}" />

</Window>
