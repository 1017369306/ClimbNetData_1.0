<UserControl x:Class="ClimbWebSiteIndexs.ClimbWebSiteIndex1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClimbWebSiteIndexs"
             xmlns:WpfUserControl="clr-namespace:HR.Share.PublicShare.CustomUserControl.WpfUserControl;assembly=HR.Share.PublicShare"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!--子用户控件用了资源词典，调用此子用户控件的窗体也要引用资源词典（加dll，加UserControl.Resources）-->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PublicResources;component/Resources/Styles/WpfFormDictionary.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/PublicResources;component/Resources/Styles/BrushColor.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.RowSpan="2">
            <WpfUserControl:WebSiteTypeAndSort />
        </Grid>

        <Grid Grid.Row="3" Margin="5,10,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <WrapPanel Grid.Column="0" x:Name="WebSitesWrap">
                <WpfUserControl:ClimbWebSite Width="80" Height="100" />
                <WpfUserControl:ClimbWebSite Width="80" Height="100" />

            </WrapPanel>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <WpfUserControl:NewClimbModule />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
