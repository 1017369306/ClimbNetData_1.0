                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Trigger.Setters>
                                    <!--<Setter TargetName="ep" Property="Width" Value="40"/>
                                    <Setter TargetName="ep" Property="Height" Value="40"/>
                                    <Setter TargetName="et" Property="FontSize" Value="12"/>-->
                                </Trigger.Setters>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>

