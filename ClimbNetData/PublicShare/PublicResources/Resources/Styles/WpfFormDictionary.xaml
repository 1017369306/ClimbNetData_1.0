<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PublicResources.Resources.Styles">

    <Style x:Key="LabelStyle1" TargetType="Label">

        <Style.Setters>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <!--<Setter Property="Foreground" Value="{TemplateBinding w}"/>
            <Setter Property="Background" Value="#00000000"/>-->
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.Setters>
                    <Setter Property="Background" Value="#FF4A6BD8"/>
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger.Setters>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="LabelStyle2" TargetType="Label">
        <Style.Setters>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FF000000"/>
            <Setter Property="Background" Value="#00000000"/>
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.Setters>
                    <Setter Property="Foreground" Value="#FF4A6BD8"/>
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger.Setters>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ceshi" TargetType="Button">
        <Style.Setters>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Content" Value="测试"/>
        </Style.Setters>
    </Style>

    <Style x:Key="BtnEllipse" TargetType="Ellipse">
        <Style.Setters>
            <Setter Property="Fill">
                <Setter.Value>
                    <ImageBrush ImageSource=""/>
                </Setter.Value>
            </Setter>
            <Setter Property="Grid.Row" Value="0"/>
        </Style.Setters>
    </Style>

    <Style x:Key="buttonImg" TargetType="Button">
        <Style.Setters>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Width" Value="10"></Setter>
            <Setter Property="Template">
